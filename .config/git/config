# vim: ft=gitconfig
[alias]
  br = branch
  ci = commit -v
  co = checkout
  df = diff
  l = log --graph --pretty=oneline --abbrev-commit
  ll = "log --stat --pretty=format:\"%C(yellow)%h%Creset %C(green)%an%Creset (%ar) : %C(red)%s\""
  lll = log -p
  pr = pull --rebase
  sh = show
  st = status

[color "diff"]
  whitespace=red reverse

[core]
  whitespace=trailing-space

[credential]
  helper = netrc

[gpg]
  format = ssh

[gpg "ssh"]
  defaultKeyCommand = ssh-add -L
  allowedSignersFile = ~/.ssh/allowed_signers

[init]
  defaultBranch = main

[push]
  default = simple

[remote "origin"]
  prune = true

[user]
  name = Mark Dechiaro
  email = mdechiaro@users.noreply.github.com
